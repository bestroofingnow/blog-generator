# .env.local (copy this file and add your actual keys)

# Claude API (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Image Generation Service
# If you want to auto-generate images, add these:
UNSPLASH_API_KEY=your_unsplash_api_key_here
PEXELS_API_KEY=your_pexels_api_key_here

# App Configuration
NEXT_PUBLIC_APP_NAME="Blog Generator"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (optional, for saving generated blogs)
# DATABASE_URL=postgresql://user:password@localhost:5432/blog_generator

# Deployment
NODE_ENV=development
